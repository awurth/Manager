{% extends 'app/admin/layout.html.twig' %}

{% block page_content %}
  <a class="btn btn-success-o text-sm mt-4 mb-4 font-bold" href="{{ path('app_admin_project_type_create') }}">
    <i class="fas fa-plus"></i>
    Nouveau type de projet
  </a>
  <table>
    <tbody>
      {% for type in types %}
        <tr>
          <td>
            <a class="font-bold text-gray-900" href="{{ path('app_admin_project_type_edit', { id: type.id }) }}">{{ type.name }}</a>
          </td>
          <td class="text-right">
            <a class="btn btn-sm" href="{{ path('app_admin_project_type_edit', { id: type.id }) }}">Éditer</a>
            <a class="btn btn-danger-o btn-sm ml-2" data-confirm="Êtes-vous sûr de vouloir supprimer ce type de projet ?" href="{{ path('app_admin_project_type_delete', { id: type.id }) }}">Supprimer</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {% if pager.haveToPaginate %}
    <div class="pagination text-center">
      {{ pagerfanta(pager) }}
    </div>
  {% endif %}
{% endblock %}
