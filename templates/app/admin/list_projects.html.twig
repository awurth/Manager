{% extends 'app/admin/layout.html.twig' %}

{% block page_content %}
  <div class="page-title">
    <h1>Projets</h1>
  </div>
  <a class="btn success mb-4" href="{{ path('app_project_create') }}">Nouveau projet</a>
  <ul class="list-disc list-inside">
    {% for project in projects %}
      <li class="mb-4">
        <a class="font-bold" href="{{ path('app_project_view', { slug: project.slug }) }}">{{ project.name }}</a>
        <a class="py-2 pl-2 pr-1 ml-2 border border-gray-400 hover:bg-gray-200 rounded text-xs" href="{{ path('app_project_edit', { slug: project.slug }) }}">
          <i class="fas fa-edit"></i>
        </a>
        <a class="p-2 ml-2 bg-red-600 hover:bg-red-700 rounded text-xs text-white" href="{{ path('app_project_delete', { slug: project.slug }) }}">
          <i class="fas fa-trash"></i>
        </a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
