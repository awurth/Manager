{% extends 'app/admin/layout.html.twig' %}

{% block page_content %}
  <h1 class="pb-3 mb-4 border-b border-gray-300 text-2xl font-bold">Identifiants</h1>
  <a class="inline-block px-4 py-2 bg-green-600 hover:bg-green-700 rounded text-white mb-4" href="#">Nouvel identifiant</a>
  <ul>
    {% for credential in credentials %}
      <li class="mb-4">
        <p>Nom : {{ credential.name }}</p>
        <p>Nom d'utilisateur : {{ credential.username }}</p>
        <p>Email : {{ credential.email }}</p>
        <p>Mot de passe : {{ credential.password }}</p>
        <p>Site web : {{ credential.website }}</p>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
