{% extends 'app/user_settings/layout.html.twig' %}

{% block page_content %}
  <div class="flex items-center flex-col my-6">
    <span class="identicon w-48 h-48 text-3xl font-bold mb-2">
      {{ app.user.firstname|first|capitalize }}{{ app.user.lastname|first|capitalize }}
    </span>
    <span class="block text-2xl text-gray-700 font-bold">{{ app.user.firstname }} {{ app.user.lastname }}</span>
  </div>
  <div class="flex justify-center">
    {{ form_start(form, { attr: { class: 'w-1/2' } }) }}
      <div class="flex justify-center">
        {{ form_row(form.email) }}
      </div>
      <div class="flex justify-evenly">
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
      </div>
      {{ form_rest(form) }}
      <div class="text-center">
        <button type="submit" class="btn btn-primary mt-4">Enregistrer</button>
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
