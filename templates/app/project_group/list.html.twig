{% extends 'app/layout.html.twig' %}

{% block page_content %}
  <div class="page-title">
    <h1>Groupes</h1>
  </div>
  {% if is_granted('ROLE_PROJECT_GROUP_CREATE') %}
    <a class="btn success" href="{{ path('app_project_group_create') }}">Nouveau groupe</a>
  {% endif %}
  <ul class="flex flex-col mt-4">
    {% for group in groups %}
      <li class="flex py-3 border-b last:border-b-0">
        <div class="flex flex-auto items-center">
          <a class="mr-auto text-sm font-bold" href="{{ path('app_project_group_view', { slug: group.slug }) }}">{{ group.name }}</a>
          <span class="text-sm text-gray-600">Dernière mise à jour {{ group.updatedAt|diffForHumans }}</span>
        </div>
      </li>
    {% endfor %}
  </ul>
  {% if pager.haveToPaginate %}
    <div class="pagination text-center">
      {{ pagerfanta(pager) }}
    </div>
  {% endif %}
{% endblock %}
