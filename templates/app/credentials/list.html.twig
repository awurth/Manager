{% extends 'app/layout.html.twig' %}

{% block body %}
  <div class="container mx-auto p-4">
    <h1 class="pb-3 border-b border-gray-300 text-2xl font-bold">Identifiants</h1>
    {% if is_granted('ROLE_CREDENTIALS_CREATE') %}
      <a class="inline-block px-4 py-2 bg-green-600 hover:bg-green-700 rounded text-white mt-4" href="{{ path('app_credentials_create') }}">Nouveaux identifiants</a>
    {% endif %}
    <ul class="flex flex-col mt-4">
      {% for credential in credentials %}
        <li class="flex py-3 border-b last:border-b-0">
          <div class="flex flex-auto items-center">
            <a class="mr-auto text-sm font-bold" href="{{ path('app_credentials_view', { id: credential.id }) }}">{{ credential.name }}</a>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
