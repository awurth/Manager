{% if app.request.hasPreviousSession %}
  {% set flashes = app.flashes(['success', 'warning', 'error', 'info']) %}
  {% if flashes.success or flashes.warning or flashes.error or flashes.info %}
    <div class="mt-4 mb-4 text-center">
      {% for label, messages in flashes %}
        {% for message in messages %}
          <div class="alert {{ label }}" role="alert">
            <span>{{ message|trans }}</span>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  {% endif %}
{% endif %}
