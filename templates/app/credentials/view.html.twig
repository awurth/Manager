{% extends 'app/layout.html.twig' %}

{% block body %}
  <div class="container mx-auto p-4">
    <h1 class="pb-3 mb-4 border-b border-gray-300 text-2xl font-bold">Identifiants : {{ credentials.name }}</h1>
    {% if is_granted('EDIT', credentials) %}
      <a class="inline-block px-4 py-2 bg-green-600 hover:bg-green-700 rounded text-white mb-4" href="{{ path('app_credentials_edit', { id: credentials.id }) }}">
        Ã‰diter
      </a>
    {% endif %}
    {% if is_granted('DELETE', credentials) %}
      <a class="inline-block px-4 py-2 bg-red-600 hover:bg-red-700 rounded text-white mb-4" href="{{ path('app_credentials_delete', { id: credentials.id }) }}">
        Supprimer
      </a>
    {% endif %}
    {% if credentials.description %}
      <p class="mb-4">{{ credentials.description }}</p>
    {% endif %}
    <div class="px-4 py-2 border border-gray-300 shadow">
      {% if credentials.username %}
        <p>
          <strong>Nom d'utilisateur</strong>
          <span>{{ credentials.username }}</span>
        </p>
      {% endif %}
      {% if credentials.email %}
        <p>
          <strong>Email</strong>
          <span>{{ credentials.email }}</span>
        </p>
      {% endif %}
      <p>
        <strong>Mot de passe</strong>
        <span>{{ credentials.password }}</span>
      </p>
      {% if credentials.website %}
        <p>
          <strong>Site web</strong>
          <span>{{ credentials.website }}</span>
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}
