{% extends 'app/layout.html.twig' %}

{% block body %}
  <div class="container mx-auto p-4">
    <h1 class="pb-3 border-b border-gray-300 text-2xl font-bold">Projets</h1>
    <ul class="mt-4">
      {% for project in projects %}
        <li>
          <a href="{{ path('app_project', { id: project.id }) }}">{{ project.name }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
