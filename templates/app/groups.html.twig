{% extends 'app/layout.html.twig' %}

{% block body %}
  <div class="container mx-auto p-4">
    <h1 class="pb-3 border-b border-gray-300 text-2xl font-bold">Groupes</h1>
    <ul class="flex flex-col mt-4">
      {% for group in groups %}
        <li class="flex py-3 border-b last:border-b-0">
          <div class="flex flex-auto items-center">
            <a class="mr-auto text-sm font-bold" href="#">{{ group.name }}</a>
            <span class="text-sm text-gray-600">Dernière mise à jour {{ group.carbonUpdatedAt.locale(app.request.locale).diffForHumans }}</span>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
