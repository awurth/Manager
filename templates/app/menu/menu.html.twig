{% extends '@KnpMenu/menu.html.twig' %}

{% block linkElement %}
  {% import _self as knp_menu %}
  <a href="{{ item.uri }}"{{ knp_menu.attributes(item.linkAttributes) }}>
    {% if item.extras.icon is defined %}
      <i class="{{ item.extras.icon }}"></i>
    {% endif %}
    {% if item.extras.identicon is defined %}
      <span class="identicon">{{ item.extras.identicon }}</span>
    {% endif %}
    {% if item.extras.image is defined %}
      <span class="image">
        <img src="{{ item.extras.image }}" alt="{{ block('label') }}">
      </span>
    {% endif %}
    <span>{{ block('label') }}</span>
  </a>
{% endblock %}

{% block spanElement %}
  {% import _self as knp_menu %}
  {% if item.extras.icon is defined %}
    <i class="{{ item.extras.icon }}"></i>
  {% endif %}
  <span{{ knp_menu.attributes(item.labelAttributes) }}>
    {{ block('label') }}
  </span>
{% endblock %}
