{% extends 'app/admin/layout.html.twig' %}

{% block page_content %}
  <h1 class="pb-3 mb-4 border-b border-gray-300 text-2xl font-bold">Projets</h1>
  <a class="inline-block px-4 py-2 bg-green-600 hover:bg-green-700 rounded text-white mb-4" href="{{ path('app_project_create') }}">Nouveau projet</a>
  <ul class="list-disc list-inside">
    {% for project in projects %}
      <li class="mb-4">
        <a class="font-bold" href="{{ path('app_project', { slug: project.slug }) }}">{{ project.name }}</a>
        <a class="py-2 pl-2 pr-1 ml-2 border border-gray-400 hover:bg-gray-200 rounded text-xs" href="{{ path('app_project_edit', { slug: project.slug }) }}">
          <i class="fas fa-edit"></i>
        </a>
        <a class="p-2 ml-2 bg-red-600 hover:bg-red-700 rounded text-xs text-white" href="{{ path('app_project_delete', { slug: project.slug }) }}">
          <i class="fas fa-trash"></i>
        </a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
